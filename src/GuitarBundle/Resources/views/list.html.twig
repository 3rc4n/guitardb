{% extends "base.html.twig" %}

{% block main %}
    <h1>List of guitars</h1>

    {# ToDo: Add some text here! #}

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        {% if guitars %}
            {% for i in guitars %}
                <tr>
                    <td>{{ i.name }}</td>
                    <td><a href="{{ path("guitar_details", {'i_guitarid': i.id}) }}" class="btn btn-primary">More</a></td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td>No guitars available</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

{% endblock %}